<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stops_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/stop1_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:elevation="2dp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           android:backgroundTint="@color/window_background"
            android:weightSum="2.0">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/colorAccent"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_edit_location"
                android:tint="@color/white"
                />

            <TextView
                android:id="@+id/stop1_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:ellipsize="end"
                android:fontFamily="@font/clanpro_narrnews"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
             />
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/stop2_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        app:elevation="2dp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:elevation="1dp"
            android:backgroundTint="@color/window_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:weightSum="2.0">


            <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/colorAccent"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_edit_location"
                android:tint="@color/white"
                />

            <TextView
                android:id="@+id/stop2_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:ellipsize="end"
                android:fontFamily="@font/clanpro_narrnews"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@android:color/darker_gray" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/stop3_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:elevation="2dp"

        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:elevation="1dp"
            android:backgroundTint="@color/window_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:weightSum="2.0">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/colorAccent"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_edit_location"
                android:tint="@color/white"
                />

            <TextView
                android:id="@+id/stop3_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:ellipsize="end"
                android:fontFamily="@font/clanpro_narrnews"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@android:color/darker_gray" />
    </android.support.v7.widget.CardView>

</LinearLayout>