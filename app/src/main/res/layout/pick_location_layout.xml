<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pick_location_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="2dp"
        app:elevation="5dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginRight="@dimen/_40sdp"
            android:ellipsize="end"
            android:fontFamily="@font/clanpro_narrnews"
            android:gravity="center_vertical"
            android:text="@string/pickup_location"

            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/window_background"
            android:textSize="@dimen/text_14" />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="end|center"
            android:layout_marginRight="@dimen/_5sdp"

            android:src="@drawable/location_icon"
            android:text="@string/where_to"
            android:tint="@color/white"
            android:padding="12dp"
            />
    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="2dp"
            app:elevation="1dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/clanpro_narrnews"
                android:gravity="center_vertical"
                android:text="@string/where_to"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_40sdp"
                android:textColor="@color/window_background"
                android:textSize="@dimen/text_14" />
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="end|center"
                android:layout_marginRight="@dimen/_5sdp"

                android:src="@drawable/location_icon"
                android:text="@string/where_to"
                android:tint="@color/white"
                android:padding="12dp"
                />

        </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/stops_destinations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="1dp">

        <LinearLayout
            android:id="@+id/stop1_daddress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:weightSum="2.0">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_location"
            android:tint="@color/colorAccent"
            android:layout_weight="0.075"/>

        <TextView
            android:id="@+id/stop1_daddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:ellipsize="end"
            android:fontFamily="@font/clanpro_narrnews"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_12" />


    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/stop2_daddress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:weightSum="2.0">


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_location"
            android:tint="@color/colorAccent"
            android:layout_weight="0.075"/>

        <TextView
            android:id="@+id/stop2_daddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:ellipsize="end"
            android:fontFamily="@font/clanpro_narrnews"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_12" />


    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stop3_daddress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:weightSum="2.0">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_location"
            android:tint="@color/colorAccent"
            android:layout_weight="0.075"/>

        <TextView
            android:id="@+id/stop3_daddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:ellipsize="end"
            android:fontFamily="@font/clanpro_narrnews"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_12" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>